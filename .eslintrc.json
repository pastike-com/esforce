{
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended",
    "@vue/typescript/recommended",
    "@vue/prettier",
    "@vue/prettier/@typescript-eslint"
  ],
  "ignorePatterns": [
    "dist"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "root": true,
  "rules": {
    "@typescript-eslint/ban-ts-comment": "off"
  }
}
